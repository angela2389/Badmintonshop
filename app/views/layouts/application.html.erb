<!DOCTYPE html>
<html>
  <head>
    <title>Badmintonshop</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="header">
    <h1> Badminton Plaza</h1>
    </div>
    <div class="navbar">
      <div class="navbar-left">
        <ul>
        <li>  <%= link_to "Home", root_path %> </li>
        <li></li>
        <li>
            <%= form_tag products_search_path, :method => 'get' do %>
              <%= text_field_tag :search, params[:search] %>
              <%= submit_tag "Search Product" %>
            <% end %>
          </li>
      </ul>
      </div>
      <div class="navbar-right">
        <ul>
          <% if !user_signed_in? %>
            <li><%= link_to "Log In ", new_user_session_path %></li>
            <li><%= link_to "Cart", cart_path %></li>
          <% else %>
            <li><%= current_user.first_name %></li>
            <li><%= link_to "Cart", cart_path %></li>
            <% if current_user.admin === true %>
            <li><%= link_to "All products", products_path %></li>
            <li><%= link_to "All orders", orders_path %></li>
            <% end %>
            <li><%= link_to "Edit profile", edit_user_registration_path %></li>
            <li><%= link_to "Log Out ", destroy_user_session_path, :method => :delete %></li>
          <% end %>
        </ul>
      </div>
    </div>
    <%= yield %>
  </body>
</html>

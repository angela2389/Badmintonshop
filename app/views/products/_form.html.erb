  <%= f.label :description %>
  <%= f.text_area :description %>
  </div>

  <div class="field">
  <%= f.label :image %>
  <%= f.text_field :image %>
  </div>

  <div class="field">
  <%= f.label :price %>
  <%= f.number_field :price %>
  </div>

  <div class="field">
  <%= f.label :stock %>
  <%= f.number_field :stock %>
  </div>

  <div class="field">
  <%= f.label :category %>
  <%= f.collection_select :category_id, Category.order(:name), :id, :name %>

<p id="notice"><%= notice %></p>

<h2><%= @category.name %></h2>

<div class="productspage">
  <div class="filter">
    <br>
    <b><p> Filter by brand </p></b>
    <%=form_tag products_brandfilter_path,{:method=>'get', class:"navbar-form navbar-left", role:"filter"}  do%>
      <% @brands.each do |brand| %>
      <p> <%= check_box_tag("filter[]", brand.id) %> <%= brand.name%> </p>
        <%= hidden_field_tag 'category', "Shuttles" %>
      <% end %>
      <%= submit_tag 'Filter', class:"btn btn-default " %>
    <% end %>
  </div>


  <div class="productoverview">
        <% @products.each do |product| %>
          <div class = "product">
            <h3><%= product.name %></h3><br>
            <%= product.sub_header %> <br>
            <%= image_tag product.image.to_s %><br>
            <p class= "price"><%= format_price(product) %></p>
            <p> Stock: <%= product.stock %> </p>
            <% if product.in_stock? %>
              <%= link_to 'Add to cart', add_cart_path(product) %>
            <% else %>
              <%= "Product not in stock" %>
            <% end %> <br><br>
              <%= link_to 'Show details', product %>
            <% if can? :manage, Product %>
              <%= link_to 'Edit', edit_product_path(product) %>
              <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %>
            <% end %>
          </div>
      <% end %>
    </div>
  <br>
  <% if can? :create, Product %>
    <%= link_to 'New Product', new_product_path %><br>
  <% end %>
  <%= link_to 'Back', root_path %>
</div>

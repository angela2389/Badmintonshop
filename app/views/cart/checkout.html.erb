<h2> Checkout </h2>

<% total = 0 %>

<table>
  <tr class="cart">
    <td>Name</td>
    <td>Price</td>
    <td>Quantity</td>
    <td>Total price</td>
  </tr>

  <% @cart.each do | id, quantity | %>
    <% product = Product.find_by_id(id) %>
  <tr>
    <td><%= product.name %></td>
    <td><%= number_to_currency(product.price, :unit => "€") %></td>
    <td><%= quantity %> </td>
    <% subtotal = quantity * product.price %>
    <td><%=number_to_currency(subtotal, :unit => "€") %></td>
  </tr>
    <%total = total + subtotal%>
  <% end %>
  </table>
  <br>
  <b>Total shopping cart: <%= number_to_currency(total, :unit => "€") %></b>
  <br><br>
  <h3> Delivery Address: </h3>
  <%= current_user.first_name %> <%= current_user.last_name %> <br>
  <%= current_user.street %>
  <%= current_user.house_number %> <br>
  <%= current_user.postal %> <br>
  <%= current_user.city %> <br>
  <%= current_user.country %> <br>
